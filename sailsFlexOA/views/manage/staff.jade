//- Declaration
mixin table-header(name, width)
  th(class!=attributes.class, tabindex='0', aria-controls='sample_editable_1', style="width: #{width}px;", aria-label='#{name}', rowspan='1', colspan='1')= name

extends ../layout
block page_plugins
  link(rel='stylesheet', href='/global/plugins/datatables/datatables.min.css', type='text/css')
  link(rel='stylesheet', href='/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css', type='text/css')
block content-header
  .theme-panel.hidden-xs.hidden-sm
  .page-bar
    ul.page-breadcrumb
      li
        a(href='#') 首页
        i.fa.fa-circle
      li
        span 用户
    .page-toolbar
      .pull-right.tooltips.btn.btn-sm(id='dashboard-report-range', data-original-title='更改设定日期', data-container='body', data-placement='bottom')
        i.icon-calendar
        span.thin.uppercase.hidden-xs= date
        i.fa.fa-angle-down
  h3.page-title 管理
   small 员工资料
block content
  .row
    .col-md-12
      .protlet.light.portlet-fit.bordered
        .protlet-title
          .caption
            i.icon-settings.font-red
            span.caption-subject.font-red.sblod.uppercase 员工资料
          .actions
        .portlet-body
          .table-toolbar
            .row
              .col-md-6
                .btn-group
                  button.btn.green(id='sample_editable_1_new') 添加员工
                    i.fa.fa-plus
              .col-md-6
                .btn-group.pull-right
                  button.btn.green.btn-outline.dropdown-toggle(aria-expanded='false', data-toggle='dropdown') 导出
                    i.fa.fa-angle-down
                  ul.dropdown-menu.pull-right
                    li
                      a(href='javascript:;') 导出为xml
                    li
                      a(href='javascript:;') 导出为Excel
                    li
                      a(href='javascript:;') 导出为pdf                  
          .dataTables_wrapper.no-footer(id='sample_editable_1_wrapper')
            .dataTables_wrapper.no-footer(id='sample_editable_1_wrapper')
            .row
              .col-md-6.col-sm-6
                .dataTables_length(id='sample_editable_1_length')
                  label
                    <select class='form-control.input-sm.input-xsmall.input-inline' name='sample_editable_1_length' aria-controls='sample_editable_1'>
                      <option value='5'>5</option>
                      <option value='10'>10</option>
                      <option value='15'>15</option>
                      <option value='20'>20</option>
                      <option value='-1'>全部</option>
                    </select> 记录
              .col-md-6.col-sm-6
                .dataTables_filter(id='sample_editable_1_filter')
                  label 搜索
                    input.form-control.input-sm.input-small.input-inline(aria-controls='sample_editable_1', type='search', placeholder='搜索员工')
            .table-scrollable
              table.table.table-striped-table-hover.table-bordered.dataTable.no-footer(id='sample_editable_1', role='grid', aria-describedby='sample_editable_1_info', style='width:1416px;')
                thead
                  tr(role='row')
                    +table-header('用户名', 230)(aria-sort='ascending')
                    +table-header('姓名', 257)
                    +table-header('职务', 200)
                    +table-header('编辑', 124)
                    +table-header('删除', 168)
                tbody
                - var loop = 0
                  // here goes your users' profiles
                  while loop < 12
                    if loop%2 == 0
                      tr.odd(row='row')
                        td= loop
                        td.sorting_1= loop+'_name'
                        td= loop
                        td.center= loop
                        td
                          a.edit(href='javascript:;') 编辑
                        td
                          a.delete(href='javascript:;') 删除
                    else
                      tr.even(row='row')
                        td= loop
                        td.sorting_1= loop+'_name'
                        td= loop
                        td.center= loop
                        td
                          a.edit(href='javascript:;') 编辑
                        td
                          a.delete(href='javascript:;') 删除
            .row
              .col-md-5.col-sm-5
                .dataTables_info(id='sample_editable_1_info', role='status', aria-live='polite')第 1 到第 8 条信息
              .col-md-7.col-sm-7
                .dataTables_paginate.paging-bootstrap_number(id='sample_editable_1_paginate')
                  ul.pagination(style='visibility: visible;')
                    li.prev.disabled
                      a(title='前一页', href='#')
                        i.fa.fa-angle-left
                    li.active
                      a(href='#') 1
                    li
                      a(href='#') 2
                    li.next
block page_plugins_script
  script(src='global/scripts/datatable.js', type='text/javascript')
  script(src='global/plugins/datatables/datatables.min.js', type='text/javascript')
  script(src='global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js', type='text/javascript')
block page_scripts
  script(src='pages/scripts/table-datatables-editable.min.js', type='text/javascript')
