//- Declaration
mixin table-header(name, width)
  th(class!=attributes.class, tabindex='0', aria-controls='sample_editable_1', style="width: #{width}px;", aria-label='#{name}', rowspan='1', colspan='1')= name

extends layout
block page_plugins
  link(rel='stylesheet', href='/global/plugins/datatables/datatables.min.css', type='text/css')
  link(rel='stylesheet', href='/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css', type='text/css')
block theme_styles
  link(rel='styletheet', href='/global/css/component.min.css', type='text/css', id='style_components')
  link(rel='stylesheet', href='/global/css/plugins.min.css', type='text/css')
block content-header
  .theme-panel.hidden-xs.hidden-sm
  .page-bar
    ul.page-breadcrumb
      li
        a(href='#') 首页
        i.fa.fa-circle
      li
        span 用户
    .page-toolbar
      .pull-right.tooltips.btn.btn-sm(id='dashboard-report-range', data-original-title='更改设定日期', data-container='body', data-placement='bottom')
        i.icon-calendar
        span.thin.uppercase.hidden-xs= date
        i.fa.fa-angle-down
  h3.page-title 管理
    small 公司职务
block content
  .row
    .col-md-3(id='padding-left')
    .col-md-6(id='content')
      .portlet.light.bordered
        .portlet-title
          .caption.font-dark
            i.icon-settings.font-dark
            span.caption-subject.bold.uppercase 职位
          .tools
        .portlet-body
          table.table.table-striped.table-bordered.table-hover.dt-responsive(width='100%', id='sample_1')
            thead
              tr
                th.all 职务名称
                th.min-phone-1 
    .col-md-3(id='padding-right')
      
block page_plugins_script
  script(src='global/scripts/datatable.js', type='text/javascript')
  script(src='global/plugins/datatables/datatables.min.js', type='text/javascript')
  script(src='global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js', type='text/javascript')
block page_scripts
  script(src='pages/scripts/table-datatables-responsive.min.js', type='text/javascript')
