  body.login
    .logo
    .content
      form.login-form(action='/login', method='post', novalidate='novalidate')
        h3.form-title.font-green 登陆
        .alert.alert-danger.display-hide
          button.close(data-close='alert')
          span 请输入账号和密码
        .form-group.has-error
          label.control-label.visible-ie8.visible-ie9 用户名
          input(name='username', class='form-control form-control-solid placeholder-no-fix valid', aria-invalid='true', aira-required='true', aria-describedy='username-error', type='text', placeholder='用户名', autocomplete='off')
        .form-group.has-error
          label.control-label.visible-ie8.visible-ie9 密码
          input(name='password', class='form-control form-control-solid placeholder-no-fix', aria-required='true', aria-describedy='password-error', type='password', placeholder='密码', autocomplete='off')
        .form-actions
          button.btn.green.uppercase(type='submit') 登陆
          label.rememberme.check
            .checker
              span
                input(name='remember', type='checkbox', value='1')
        .create-account
          p 
            a.uppercase(id='register-btn', href='javascript:;') 注册账号
      form.register-form(action='/register', method='post', novalidate='novalidate', style='display:none;')
        h3.font-green 注册
        .form-group
          label.control-label.visible-ie8.visible-ie9 用户名
          input(name='username', class='form-control placeholder-no-fix', type='text', placeholder='用户名')
        .form-group
          label.control-label.visible-ie8.visible-ie9 密码
          input(name='password', class='form-control placeholder-no-fix', id='register_password' type='password', placeholder='密码' autocomplete='off')
        .form-actions
          button.btn.btn-default(id='register-back-btn', type='button') 返回
          button.btn.btn-success.uppercase.pull-right(id='register-submit-btn', type='submit') 提交          
