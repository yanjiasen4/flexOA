extends layout

block page_plugins
  link(rel='stylesheet', href='global/plugins/select2/css/select2.min.css', type='text/css')
  link(rel='stylesheet', href='global/plugins/select2/css/select2-bootstrap.min.css', type='text/css')
  link(rel='stylesheet', href='global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css', type='text/css')
  link(rel='stylesheet', href='global/plugins/bootstrap-wysihtml5/bootstrap-wysihtml5.css', type='text/css')
  link(rel='stylesheet', href='global/plugins/bootstrap-markdown/css/bootstrap-markdown.min.css', type='text/css')
block theme_styles
  link(rel='stylesheet', href='global/css/components.min.css', type='text/css', id='style_components')
  link(rel='stylesheet', href='global/css/plugins.min.css', type='text/css')
block content-header
  .theme-panel.hidden-xs.hidden-sm
  .page-bar
    ul.page-breadcrumb
      li
        a(href='#') 首页
        i.fa.fa-circle
      li
        span 项目
    .page-toolbar
      .pull-right.tooltips.btn.btn-sm(id='dashboard-report-range', data-original-title='更改设定日期', data-container='body', data-placement='bottom')
        i.icon-calendar
        span.thin.uppercase.hidden-xs= date
        i.fa.fa-angle-down
  h3.page-title 工作
    small 审批项目
block content
  .container.padding-both
    .row(style='text-align: center;')
      .col-md-12
        .portlet.light.portlet-fit.portlet-form.bordered
          .portlet-title
            .caption
              i.icon-layers.font-green
              span.caption-subject.font-green.sbold.uppercase 新建审批
            .actions
          .portlet-body
            form.form-horizontal(id='form_sample_1', action='/addProject', novalidate='novalidate')
              .form-body
                .alert.alert-danger.display-hide(style='display: block;')
                  button.close(data-close='alert') 出错了，请您再检查一下输入
                .alert.alert-success.display-hide(style='display: none;')
                  button.close(data-close='alert') 提交成功！
                .form-group.form-md-line-input.has-error
                  label.col-md-3.control-label(for='form_control_1') 项目名
                    span.required(aria-required='true') *
                  .col-md-9
                    input(name='name', class='form-control', aria-invalid='false', aria-required='true', aira-describedby='name-error', type='text', placeholder='')
                    .form-control-focus
                .form-group.form-md-line-input
                  label.col-md-3.control-label(for='form_control_1') 类型
                    span.required(aria-required='true') *
                  .col-md-9
                    select(name='delivery', class='form-control', aria-required='true', aria-describedby='delivery-error')
                      option(value='1') 吃
                      option(value='2') 喝
                      option(value='3') 嫖
                      option(value='4') 赌
                    .form-control-focus
                .form-group.form-md-line-input
                  label.col-md-3.control-label(for='form_control_1') 描述
                  .col-md-9
                    textarea(name='描述', class='form-control', row='3')
                    .form-control-focus
                    
                  
              .form-actions
    
  
block page_plugins_script
  script(src='/global/plugins/jquery-validation/js/jquery.validation.min.js', type='text/javascript')
  script(src='/global/plugins/jquery-validation/js/additional-methods.min.js', type='text/javascript')
block page_scripts
  script(src='/page/scripts/form-validation-md.min.js', type='text/javascript')
